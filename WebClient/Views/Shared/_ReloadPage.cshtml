@model MainViewModel;

@if (Model.IncluirBlazorComponents)
{
	<div id="reconnectBlazor" class="blazor-reconnect-overlay d-none">
		<div class="blazor-reconnect-card">
			<div class="spinner-border text-primary mb-3" role="status"></div>

			<h5 class="mb-2">Conexión perdida</h5>

			<p class="text-muted text-center mb-4">
				Se perdió la conexión con el servidor.<br />
				Intentando reconectar…
			</p>

			<a href="@Url.Action("Sesion","Index")"
			   class="btn btn-outline-primary">
				<i class="bi bi-arrow-clockwise me-1"></i>
				Volver al inicio de sesión
			</a>
		</div>
	</div>
}
